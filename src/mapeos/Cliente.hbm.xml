<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">

<hibernate-mapping package="datos">
  <class name="Cliente" table="clientes">
    
    <id name="id" column="id" type="long">
      <generator class="identity"/>
    </id>

    <property name="nombre"  column="nombre"  type="string"/>
    <property name="apellido" column="apellido" type="string"/>
    <property name="email"   column="email"   type="string"/>

    <set name="turnos" inverse="true" lazy="extra" cascade="all">
      <key column="cliente_id"/>
      <one-to-many class="datos.Turno"/>
    </set>
  </class>
</hibernate-mapping>