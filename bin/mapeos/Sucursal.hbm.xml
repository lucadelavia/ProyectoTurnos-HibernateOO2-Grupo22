<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">

<hibernate-mapping package="datos">
  <class name="Sucursal" table="sucursales">
    
    <id name="id" column="idsucursal" type="integer">
      <generator class="identity"/>
    </id>

    <property name="direccion"     column="direccion"       type="string"/>
    <property name="telefono"      column="telefono"        type="string"/>
    <property name="horaApertura"  column="horario_apertura" type="string"/>
    <property name="horaCierre"    column="horario_cierre"  type="string"/>

    <bag name="lstEspecialidad" table="especialidad_sucursal"
         inverse="true" lazy="true">
      <key column="sucursal_id"/>
      <many-to-many class="datos.Especialidad" column="especialidad_id"/>
    </bag>

    <bag name="puntosDeAtencion" table="puntoDeAtencion_sucursal"
         inverse="true" lazy="true">
      <key column="sucursal_id"/>
      <one-to-many class="datos.PuntoDeAtencion"/>
    </bag>

  </class>
</hibernate-mapping>
